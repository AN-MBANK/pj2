@model IEnumerable<A_Ecommerce.ViewModels.HangHoaVM>

<div class="row g-4">
    <div class="col-12 mb-3">
        <h3>Có <b>@Model.Count()</b> sản phẩm.</h3>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded">
                <div class="position-relative">
                    <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.MaHh">
                        <img src="~/Hinh/HangHoa/@item.Hinh" class="card-img-top rounded-top" alt="@item.TenHH" style="object-fit:cover; height:250px;">
                    </a>
                    <span class="badge bg-secondary position-absolute top-0 start-0 m-2">@item.TenLoai</span>
                </div>
                <div class="card-body d-flex flex-column">
                    <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.MaHh" class="text-decoration-none text-dark">
                        <h5 class="card-title">@item.TenHH</h5>
                    </a>
                    <p class="card-text flex-grow-1">@item.MoTaNgan</p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="fw-bold text-dark fs-5">$@item.DonGia</span>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.MaHh" class="btn btn-outline-primary btn-sm">
                            <i class="fa fa-shopping-bag me-1"></i> Giỏ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
